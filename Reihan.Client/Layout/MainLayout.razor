@inherits LayoutComponentBase

<MudRTLProvider RightToLeft="true">
    <MudThemeProvider Theme="MyCustomTheme" IsDarkMode="false" />
    <MudPopoverProvider />
    <MudDialogProvider />
    <MudSnackbarProvider />

    <MudLayout>
        <NavMenu></NavMenu>

        <MudMainContent Class="main-content">
            <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="border border-solid rounded-xl pt-10 pb-10" Style="@($"border-color:{Colors.Gray.Lighten2}; background: white;")">
                @Body
            </MudContainer>
        </MudMainContent>
    </MudLayout>
</MudRTLProvider>

@code {
    MudTheme MyCustomTheme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#ec407a", // صورتی
            Secondary = "#f48fb1", // صورتی روشن‌تر
            Surface = "#ffffff",   // پس‌زمینه کارت‌ها و دیالوگ‌ها
            Background = Colors.Gray.Lighten4,
            AppbarBackground = Colors.Gray.Lighten4,
            AppbarText = Colors.Gray.Darken4,
            DrawerBackground = Colors.Gray.Lighten4,
            DrawerText = Colors.Gray.Darken4,
            TextPrimary = "#333333",
            TextSecondary = "#888888",
            Divider = "#e0e0e0",
            Success = "#4caf50",
            Warning = "#ff9800",
            Error = "#f44336"
        },

        Typography = new Typography()
        {
            Default = new DefaultTypography()
            {
                FontFamily = new[] { "Dana", "Segoe UI" }
            },

            H5 = new H5Typography()
            {
                FontWeight = "800"
            },

            H6 = new H6Typography()
            {
                FontSize = "1.20rem",
                FontWeight = "700"
            }
        }
    };
}